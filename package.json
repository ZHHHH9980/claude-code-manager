{
  "name": "claude-code-manager",
  "version": "1.0.0",
  "scripts": {
    "dev": "node server/index.js",
    "build": "cd client && npm run build",
    "test": "node --test tests/pty-manager.test.js tests/terminal-socket.test.js",
    "test:terminal": "node --test tests/pty-manager.test.js tests/terminal-socket.test.js",
    "hooks:install": "git config core.hooksPath .githooks && chmod +x .githooks/pre-commit .githooks/post-commit",
    "hooks:uninstall": "git config --unset core.hooksPath || true",
    "ui:mobile:check": "npm --prefix client run mobile:build-check",
    "ui:mobile:watch": "node ./scripts/ui-mobile-watch.mjs",
    "mcp:mobile": "npm --prefix client run mcp:mobile",
    "mcp:task-persistence": "npm --prefix client run mcp:task-persistence",
    "mcp:task-hot-session": "npm --prefix client run mcp:task-hot-session"
  },
  "dependencies": {
    "@notionhq/client": "^2.2.14",
    "better-sqlite3": "^12.6.2",
    "chokidar": "^3.5.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "node-pty": "^1.0.0",
    "simple-git": "^3.20.0",
    "socket.io": "^4.7.2",
    "ssh2": "^1.15.0"
  },
  "devDependencies": {
    "socket.io-client": "^4.8.3"
  }
}
